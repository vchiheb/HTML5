#give this script one command line argument: the name of the html file you wish to build

xsl='../docs/Content/xsl/HTMLBuild.xsl';
xml='../docs/Content/xml/';
xml+=$1;
xml+='.xml';

html='../docs/Content/Pages/';
html+=$1;
html+='.html';

#xml is the stuff that needs to go into <head> like title and description

xsltproc -o $html --stringparam file1 $1 $xsl $xml



